<h1>Listing photos</h1>

<table>
  <thead>
    <tr>
              <th>Description</th>
              <th>Parent</th>
            <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
                  <td><%= photo.description %></td>
                  <td><%= photo.attachable_id %></td>
                <td>
          <%= link_to 'Show', photo, :class=>"btn" %>
          <%= link_to 'Edit', edit_photo_path(photo), :class=>"btn" %>
          <%= link_to 'Destroy', photo, confirm: 'Are you sure?', method: :delete, :class=>"btn" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="form-actions">
  <%= link_to 'New Photo', new_photo_path, :class=>"btn" %>
</div>
