<%= simple_form_for(@category) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :name %>
    <%= f.input :parent_id, :as => :select, :collection => nested_set_options(Category, @category) {|i| "#{'-' * i.level} #{i.name}" } %>
    <%= f.input :seq %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
