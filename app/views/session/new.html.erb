<div class="login_form">
	<% if flash[:notice] %>
		<p id="notice"><%= flash[:notice] %></p>
	<% end %>
	
	<%= form_tag do %>
		<fieldset>
			<legend>로그인</legend>
			
			<div>
				<label for="login">아이디:</label>
				<%= text_field_tag :login, params[:login] %>
			</div>
			
			<div>
				<label for="password">비밀번호:</label>
				<%= password_field_tag :password, params[:password] %>
			</div>
			
			<div>
				<%= submit_tag "로그인" %>
			</div>
		</fieldset>
	<% end %>
</div>