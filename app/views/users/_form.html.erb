<%= simple_form_for(@user, :wrapper => :inline, :html => { :multipart => true }) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :login %>
    <%= f.input :password %>
    <%= f.input :name %>
    <%= f.input :email %>

    <%= f.input :avatar, :as => :file %>
  </div>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>
